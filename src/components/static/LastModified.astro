---
const rawDate = import.meta.env.PUBLIC_LAST_MODIFIED ? new Date(import.meta.env.PUBLIC_LAST_MODIFIED) : new Date();

const now = new Date();
const yesterday = new Date(now.getDate() - 1);

let formattedDate = rawDate.toDateString() === now.toDateString() ? "Today" : "";

if (rawDate.toDateString() === yesterday.toDateString()) formattedDate = "Yesterday";

let lastModified =
    formattedDate ||
    rawDate.toLocaleString(["en-CA"], {
        year: "numeric",
        month: "2-digit",
        day: "2-digit",
        hour: "2-digit",
        minute: "2-digit",
        hour12: true,
    });
---

<p class="text-[#4b5563] dark:text-neutral-200">
    Last Modified: {lastModified}
</p>
