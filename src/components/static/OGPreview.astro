---
import { getEntry } from "astro:content";
import ChipCard from "@/components/cards/ChipCard.astro";

const skills = (await getEntry("skills", "index"))?.data;
---

<span class="flex flex-col items-center justify-center gap-4 h-full">
    <h1 class="text-6xl font-figtree tracking-wider">Amin Nausin</h1>
    <h2 class="text-2xl text-neutral-700 dark:text-neutral-300">Software Developer - Computer Science</h2>
    <div class="flex flex-wrap gap-2 max-w-2/3 justify-center">
        {
            Object.entries(skills ?? {}).map(([_, items]) => {
                return items.map((skill) => <ChipCard class="bg-white dark:bg-neutral-950">{skill}</ChipCard>);
            })
        }
    </div>
</span>
